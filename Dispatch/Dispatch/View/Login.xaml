<Page
    x:Class="Dispatch.View.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dispatch.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="DarkGreen">
        <TextBox x:Name="user" HorizontalAlignment="Center" Margin="0,342,0,0" TextWrapping="Wrap" VerticalAlignment="Top" PlaceholderText="Username" Height="26" Width="408"/>
        <TextBox x:Name="pass" HorizontalAlignment="Center" Margin="0,394,0,0" TextWrapping="Wrap" VerticalAlignment="Top" PlaceholderText="Password" Height="26" Width="408"/>
        
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,444,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,498,0,0" TextWrapping="Wrap" Text="Create New User" VerticalAlignment="Top" Height="26" Width="408" FontSize="15" FontStyle="Italic" TextAlignment="Center" Tapped="goToNewUserPage"/>

    </Grid>
</Page>
